//https://practice.geeksforgeeks.org/problems/kth-lsb/0
#include <bits/stdc++.h>
using namespace std;
typedef long long ll ; 
//Silver_Lining 
int main() {
    
    
    
    ll T ; 
    cin >> T ; 
    while ( T-- )
    {
        ll n , k  ; 
        cin >>  n >> k ; 
        if ( (  n & ( 1  << ( k - 1 ) )) == 0 ) 
            cout << 0 << endl ;
        else 
            cout << 1 << endl ; 
            
        
        
    
    }
	//code
	return 0;
}
